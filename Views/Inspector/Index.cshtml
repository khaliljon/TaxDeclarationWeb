@{
    ViewData["Title"] = "Панель инспектора";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Панель инспектора</h3>
                </div>
                <div class="card-body">
                    <p>Добро пожаловать, Инспектор!</p>
                    <ul>
                        <li>Ваша инспекция: <strong>@ViewBag.InspectionName</strong></li>
                        <li>Налогоплательщиков: <strong>@ViewBag.TaxpayerCount</strong></li>
                        <li>Деклараций: <strong>@ViewBag.DeclarationCount</strong></li>
                    </ul>
                    <hr />
                    <div class="d-flex gap-2">
                        <a asp-action="Taxpayers" class="btn btn-outline-info">Налогоплательщики</a>
                        <a asp-action="Declarations" class="btn btn-outline-info">Декларации</a>
                        <a asp-action="NonResidentMandatoryDeclarations" class="btn btn-outline-info">Обязательные декларации нерезидентов</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На главную</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
