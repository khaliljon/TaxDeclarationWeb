@model IEnumerable<TaxDeclarationWeb.Models.Taxpayer>
@{
    ViewData["Title"] = "Нерезиденты с обязательной подачей декларации";
}

<h2>@ViewData["Title"]</h2>
@if (!Model.Any())
{
    <div class="alert alert-warning">Нет нерезидентов с обязательной подачей декларации в вашей инспекции.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ИИН</th>
            <th>ФИО</th>
            <th>Инспекция</th>
            <th>Адрес</th>
            <th>Категория</th>
            <th>Телефон</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.IIN</td>
                <td>@t.FullName</td>
                <td>@t.Inspection?.Name</td>
                <td>@t.Address</td>
                <td>@t.Category?.Name</td>
                <td>@t.Phone</td>
            </tr>
        }
        </tbody>
    </table>
}