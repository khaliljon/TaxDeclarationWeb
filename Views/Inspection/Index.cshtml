@model IEnumerable<TaxDeclarationWeb.Models.Inspection>
@{
    ViewData["Title"] = "Список налоговых инспекций";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header" style="background:linear-gradient(90deg,#900c3f,#6f42c1);color:#fff;">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Налоговые инспекции</h4>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Добавить инспекцию
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle rounded">
                        <thead>
                            <tr>
                                <th scope="col">Код</th>
                                <th scope="col">Наименование</th>
                                <th scope="col">Адрес</th>
                                <th scope="col" style="width: 180px;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-sm btn-secondary me-1" title="Изменить">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Code" class="btn btn-sm btn-outline-info me-1" title="Подробнее">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-sm btn-danger" title="Удалить"
                                       onclick="return confirm('Вы уверены, что хотите удалить инспекцию @item.Name?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mb-0">
                    Нет данных о налоговых инспекциях.
                </div>
            }
        </div>
    </div>
</div>
