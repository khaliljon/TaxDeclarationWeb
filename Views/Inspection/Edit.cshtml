@model TaxDeclarationWeb.Models.Inspection

@{
    ViewData["Title"] = "Редактировать инспекцию";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg,#900c3f,#6f42c1); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        @ViewData["Title"]
    </h1>

    <form asp-action="Edit" method="post" class="mx-auto" style="max-width: 600px;">
        <input type="hidden" asp-for="Code" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger small"></span>
        </div>

        <div class="text-center" style="margin-top: 40px;">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-check-circle"></i> Сохранить изменения
            </button>

            <a asp-action="Index" class="btn btn-outline-light">
                ← Назад к списку инспекций
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}