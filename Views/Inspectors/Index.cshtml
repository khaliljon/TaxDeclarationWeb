@model IEnumerable<TaxDeclarationWeb.Models.Inspector>
@{
    ViewData["Title"] = "Инспекторы";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">Добавить инспектора</a>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ФИО</th>
        <th>Инспекция</th>
        <th>Телефон</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var inspector in Model)
    {
        <tr>
            <td>@inspector.FullName</td>
            <td>@inspector.Inspection?.Name</td>
            <td>@inspector.Phone</td>
            <td>
                <a asp-action="Details" asp-route-id="@inspector.Code" class="btn btn-sm btn-info">Детали</a>
                <a asp-action="Edit" asp-route-id="@inspector.Code" class="btn btn-sm btn-primary">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@inspector.Code" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>