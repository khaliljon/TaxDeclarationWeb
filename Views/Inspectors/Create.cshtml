@model TaxDeclarationWeb.Models.Inspector

@{
    ViewData["Title"] = "Добавить инспектора";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg,#007bff,#6610f2); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        @ViewData["Title"]
    </h1>

    <form asp-action="Create" method="post" class="mx-auto" style="max-width: 700px;">
        <input type="hidden" asp-for="Code" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="InspectionCode" class="form-label"></label>
            <select asp-for="InspectionCode" class="form-select" asp-items="ViewBag.InspectionCode">
                <option disabled selected>Выберите инспекцию</option>
            </select>
            <span asp-validation-for="InspectionCode" class="text-danger small"></span>
        </div>

        <div class="text-center" style="margin-top: 40px;">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-check-circle"></i> Сохранить
            </button>
            <a asp-action="Index" class="btn btn-outline-light">
                ← Назад к списку
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}