@model IEnumerable<TaxDeclarationWeb.Models.AuditLog>
@{
    ViewData["Title"] = "Журнал аудита";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Записей в журнале аудита пока нет.</div>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
        <tr>
            <th>Дата/время</th>
            <th>Пользователь</th>
            <th>Действие</th>
            <th>Подробности</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var log in Model)
        {
            <tr>
                <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    @log.UserEmail
                    @if (!string.IsNullOrEmpty(log.UserId))
                    {
                        <br /><small class="text-muted">(@log.UserId)</small>
                    }
                </td>
                <td>@log.Action</td>
                <td>@log.Details</td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к панели администратора</a>
</div>