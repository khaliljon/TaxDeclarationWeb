@{
    ViewData["Title"] = "Восстановление БД";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Restore" method="post">
    <div class="form-group">
        <label>Путь к резервной копии (.bak):</label>
        <input type="text" name="backupPath" class="form-control" value="C:\Users\khaly\OneDrive\Desktop\TaxDeclaration.bak" required />
    </div>
    <button type="submit" class="btn btn-danger mt-2">Восстановить БД</button>
</form>
@if (ViewBag.Result != null)
{
    <div class="alert alert-warning mt-3">@ViewBag.Result</div>
}
@if (TempData["Result"] != null)
{
    <div class="alert alert-warning mt-3">@TempData["Result"]</div>
}