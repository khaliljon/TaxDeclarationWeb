@model IEnumerable<TaxDeclarationWeb.Models.Nationality>

@{
    ViewData["Title"] = "Список национальностей";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg,#900c3f,#6f42c1);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
        @ViewData["Title"]
    </h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="text-end mb-4" style="margin-top: 20px; margin-bottom: 40px;">
        <a asp-action="Create" class="btn btn-primary"
           style="padding: 10px 20px; font-size: 16px; border-radius: 5px;">
            <i class="bi bi-plus-circle"></i> Добавить национальность
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>Код</th>
                        <th>Наименование</th>
                        <th class="text-center" style="width: 200px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-sm btn-outline-light me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Code" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Удалить национальность @item.Name?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Нет данных о национальностях.
        </div>
    }
</div>
