@model TaxDeclarationWeb.Models.Taxpayer
@{
    ViewData["Title"] = "Добавить налогоплательщика";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label asp-for="IIN"></label>
                <input asp-for="IIN" class="form-control" />
                <span asp-validation-for="IIN" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="InspectionCode">Инспекция</label>
                <select asp-for="InspectionCode" asp-items="ViewBag.InspectionCode" class="form-control"></select>
                <span asp-validation-for="InspectionCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryCode">Категория</label>
                <select asp-for="CategoryCode" asp-items="ViewBag.CategoryCode" class="form-control"></select>
                <span asp-validation-for="CategoryCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="IsDeclarationRequired"></label>
                <input asp-for="IsDeclarationRequired" class="form-check-input" type="checkbox" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="NationalityCode">Национальность</label>
                <select asp-for="NationalityCode" asp-items="ViewBag.NationalityCode" class="form-control"></select>
                <span asp-validation-for="NationalityCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Workplace"></label>
                <input asp-for="Workplace" class="form-control" />
                <span asp-validation-for="Workplace" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="IsResident"></label>
                <input asp-for="IsResident" class="form-check-input" type="checkbox" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="CountryCode">Страна</label>
                <select asp-for="CountryCode" asp-items="ViewBag.CountryCode" class="form-control"></select>
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-3">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Отмена</a>
</form>
