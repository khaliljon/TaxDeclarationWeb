@model TaxDeclarationWeb.Models.Taxpayer
@{
    ViewData["Title"] = "Информация о налогоплательщике";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">ИИН</dt>
            <dd class="col-sm-8">@Model.IIN</dd>
            <dt class="col-sm-4">ФИО</dt>
            <dd class="col-sm-8">@Model.FullName</dd>
            <dt class="col-sm-4">Адрес</dt>
            <dd class="col-sm-8">@Model.Address</dd>
            <dt class="col-sm-4">Телефон</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
            <dt class="col-sm-4">Инспекция</dt>
            <dd class="col-sm-8">@Model.Inspection?.Name</dd>
            <dt class="col-sm-4">Категория</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>
            <dt class="col-sm-4">Дата рождения</dt>
            <dd class="col-sm-8">@Model.BirthDate.ToShortDateString()</dd>
            <dt class="col-sm-4">Пол</dt>
            <dd class="col-sm-8">@Model.Gender</dd>
            <dt class="col-sm-4">Национальность</dt>
            <dd class="col-sm-8">@Model.Nationality?.Name</dd>
            <dt class="col-sm-4">Место работы</dt>
            <dd class="col-sm-8">@Model.Workplace</dd>
            <dt class="col-sm-4">Резидент</dt>
            <dd class="col-sm-8">@((Model.IsResident) ? "Да" : "Нет")</dd>
            <dt class="col-sm-4">Страна</dt>
            <dd class="col-sm-8">@Model.Country?.Name</dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.IIN" class="btn btn-primary">Редактировать</a>
            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
        </div>
    </div>
</div>
