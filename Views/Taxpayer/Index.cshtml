@model IEnumerable<TaxDeclarationWeb.Models.Taxpayer>
@{
    ViewData["Title"] = "Налогоплательщики";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3"
   asp-roles="Inspector,ChiefInspector,Admin">Добавить налогоплательщика</a>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ИИН</th>
        <th>ФИО</th>
        <th>Инспекция</th>
        <th>Категория</th>
        <th>Телефон</th>
        <th>Резидент</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.IIN</td>
            <td>@t.FullName</td>
            <td>@t.Inspection?.Name</td>
            <td>@t.Category?.Name</td>
            <td>@t.Phone</td>
            <td>@(t.IsResident ? "Да" : "Нет")</td>
            <td>
                <a asp-action="Details" asp-route-id="@t.IIN" class="btn btn-sm btn-info">Детали</a>
                @* Доступно только для инспектора, главного инспектора, админа *@
                @if (User.IsInRole("Inspector") || User.IsInRole("ChiefInspector") || User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@t.IIN" class="btn btn-sm btn-primary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@t.IIN" class="btn btn-sm btn-danger">Удалить</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
