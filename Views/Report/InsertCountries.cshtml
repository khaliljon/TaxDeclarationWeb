@{
    ViewData["Title"] = "Вставить страны";
    var message = ViewBag.InsertCountriesResult as string;
}

<h3>@ViewData["Title"]</h3>

<form method="post" asp-action="InsertCountries" class="row g-2 mb-3">
    <div class="col-auto">
        <label for="startValue" class="col-form-label">Начальный код страны:</label>
        <input type="number" name="startValue" id="startValue" min="1" class="form-control" required />
    </div>
    <div class="col-auto">
        <label for="names" class="col-form-label">Список стран через запятую:</label>
        <input type="text" name="names" id="names" class="form-control" placeholder="Казахстан, Россия, Беларусь" required />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-success">Вставить</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(message.StartsWith("Ошибка") ? "alert-danger" : "alert-success") mt-2">
        @message
    </div>
}