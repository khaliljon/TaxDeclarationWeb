@{
    ViewData["Title"] = "Нерезиденты по инспекции с обязательной декларацией";
    var nerezidents = ViewBag.NerezidentsByInspection as IEnumerable<dynamic>;
}

<h3>@ViewData["Title"]</h3>

<form method="get" asp-action="NerezidentsByInspection" class="row g-2 mb-3">
    <div class="col-auto">
        <label for="inspectionId" class="col-form-label">Код инспекции:</label>
    </div>
    <div class="col-auto">
        <input type="number" name="inspectionId" id="inspectionId"
               class="form-control" required min="1" value="@(ViewBag.InspectionId ?? "")" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Показать</button>
    </div>
</form>

@if (nerezidents != null && nerezidents.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover mt-2">
            <thead>
            <tr>
                <th>ИИН</th>
                <th>ФИО</th>
                <th>Адрес</th>
                <th>Телефон</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var taxpayer in nerezidents)
            {
                <tr>
                    <td>@taxpayer.IIN</td>
                    <td>@taxpayer.FullName</td>
                    <td>@taxpayer.Address</td>
                    <td>@taxpayer.Phone</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else if (ViewBag.InspectionId != null)
{
    <div class="alert alert-warning mt-2">
        Нет налогоплательщиков-нерезидентов с обязательной декларацией для выбранной инспекции.
    </div>
}