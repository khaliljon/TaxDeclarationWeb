@{
    ViewData["Title"] = "Декларации, поданные в текущем месяце";
    var declarations = ViewBag.DeclarationsSubmittedThisMonth as IEnumerable<dynamic>;
}

<h3>@ViewData["Title"]</h3>

@if (declarations != null && declarations.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover mt-2">
            <thead>
            <tr>
                <th>Код декларации</th>
                <th>Инспекция</th>
                <th>Инспектор</th>
                <th>Дата подачи</th>
                <th>Год</th>
                <th>Налогоплательщик</th>
                <th>Доход</th>
                <th>Расход</th>
                <th>Необлагаемые расходы</th>
                <th>Уплаченные налоги</th>
                <th>Прибыль</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in declarations)
            {
                <tr>
                    <td>@row.Code</td>
                    <td>@row.InspectionName</td>
                    <td>@row.InspectorName</td>
                    <td>@row.DateOfSubmission.ToString("dd.MM.yyyy")</td>
                    <td>@row.Year</td>
                    <td>@row.TaxpayerName</td>
                    <td>@row.IncomeAmount</td>
                    <td>@row.ExpenseAmount</td>
                    <td>@row.NonTaxableExpenses</td>
                    <td>@row.TaxesPaid</td>
                    <td>@row.Profit</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning mt-2">
        В текущем месяце декларации не подавались.
    </div>
}