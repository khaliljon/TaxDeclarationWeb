@model IEnumerable<TaxDeclarationWeb.Models.Declaration>
@{
    ViewData["Title"] = "Декларации по дате и инспекции";
    var inspections = ViewBag.Inspections as List<TaxDeclarationWeb.Models.Inspection>;
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="DeclarationsByDateAndInspection">
    <div class="form-group">
        <label>Инспекция:</label>
        <select name="inspectionCode" class="form-control" required>
            <option value="">Выберите...</option>
            @foreach (var i in inspections)
            {
                <option value="@i.Code">@i.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>День месяца:</label>
        <input type="number" name="day" class="form-control" min="1" max="31" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Показать</button>
</form>

@if (Model.Any())
{
    <hr />
    <table class="table">
        <thead>
        <tr>
            <th>Дата подачи</th>
            <th>Инспекция</th>
            <th>Инспектор</th>
            <th>ИИН</th>
            <th>ФИО</th>
            <th>Год</th>
            <th>Сумма дохода</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.SubmittedAt.ToShortDateString()</td>
                <td>@d.Inspection?.Name</td>
                <td>@d.Inspector?.FullName</td>
                <td>@d.TaxpayerIIN</td>
                <td>@d.Taxpayer?.FullName</td>
                <td>@d.Year</td>
                <td>@d.Income</td>
            </tr>
        }
        </tbody>
    </table>
}