@{
    ViewData["Title"] = "Налогоплательщики по категории и дате подачи декларации";
    var taxpayers = ViewBag.TaxpayersByCategoryAndDate as IEnumerable<dynamic>;
}

<h3>@ViewData["Title"]</h3>

<form method="get" asp-action="TaxpayersByCategoryAndDate" class="row g-2 mb-3">
    <div class="col-auto">
        <label for="categoryCode" class="col-form-label">Код категории:</label>
        <input type="number" name="categoryCode" id="categoryCode"
               value="@(ViewBag.CategoryCode ?? "")" class="form-control" required />
    </div>
    <div class="col-auto">
        <label for="day" class="col-form-label">День подачи декларации:</label>
        <input type="number" name="day" id="day" min="1" max="31"
               value="@(ViewBag.Day ?? "")" class="form-control" required />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Показать</button>
    </div>
</form>

@if (taxpayers != null && taxpayers.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover mt-2">
            <thead>
                <tr>
                    <th>ИИН</th>
                    <th>ФИО</th>
                    <th>Адрес</th>
                    <th>Телефон</th>
                    <th>Дата рождения</th>
                    <th>Пол</th>
                    <th>Место работы</th>
                    <th>Код категории</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var row in taxpayers)
            {
                <tr>
                    <td>@row.IIN</td>
                    <td>@row.FullName</td>
                    <td>@row.Address</td>
                    <td>@row.Phone</td>
                    <td>@row.BirthDate?.ToString("dd.MM.yyyy")</td>
                    <td>@row.Gender</td>
                    <td>@row.Workplace</td>
                    <td>@row.CategoryCode</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else if (ViewBag.CategoryCode != null && ViewBag.Day != null)
{
    <div class="alert alert-warning mt-2">
        Нет налогоплательщиков выбранной категории, подавших декларацию @ViewBag.Day числа.
    </div>
}
