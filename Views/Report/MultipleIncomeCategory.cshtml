@{
    ViewData["Title"] = "Плательщики с несколькими местами дохода";
    var taxpayers = ViewBag.MultipleIncomeCategory as IEnumerable<dynamic>;
}

<h3>@ViewData["Title"]</h3>

@if (taxpayers != null && taxpayers.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover mt-2">
            <thead>
            <tr>
                <th>ИИН</th>
                <th>ФИО</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Национальность</th>
                <th>Место работы</th>
                <th>Страна</th>
                <th>Категория</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in taxpayers)
            {
                <tr>
                    <td>@row.IIN</td>
                    <td>@row.FullName</td>
                    <td>@row.Address</td>
                    <td>@row.Phone</td>
                    <td>@row.BirthDate?.ToString("dd.MM.yyyy")</td>
                    <td>@row.Gender</td>
                    <td>@row.NationalityName</td>
                    <td>@row.Workplace</td>
                    <td>@row.CountryName</td>
                    <td>@row.CategoryName</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning mt-2">
        Нет налогоплательщиков с несколькими местами получения дохода.
    </div>
}