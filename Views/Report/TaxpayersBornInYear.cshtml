@{
    ViewData["Title"] = "Налогоплательщики выбранного года рождения";
    var taxpayers = ViewBag.TaxpayersBornInYear as IEnumerable<dynamic>;
}

<h3>@ViewData["Title"]</h3>

<form method="get" asp-action="TaxpayersBornInYear" class="row g-2 mb-3">
    <div class="col-auto">
        <label for="year" class="col-form-label">Год рождения:</label>
        <input type="number" name="year" id="year" min="1900" max="@DateTime.Now.Year"
               value="@(ViewBag.Year ?? "")" class="form-control" required />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Показать</button>
    </div>
</form>

@if (taxpayers != null && taxpayers.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover mt-2">
            <thead>
            <tr>
                <th>ИИН</th>
                <th>ФИО</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Место работы</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in taxpayers)
            {
                <tr>
                    <td>@row.IIN</td>
                    <td>@row.FullName</td>
                    <td>@row.Address</td>
                    <td>@row.Phone</td>
                    <td>@row.BirthDate?.ToString("dd.MM.yyyy")</td>
                    <td>@row.Gender</td>
                    <td>@row.Workplace</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else if (ViewBag.Year != null)
{
    <div class="alert alert-warning mt-2">
        Нет налогоплательщиков, родившихся в @ViewBag.Year году.
    </div>
}