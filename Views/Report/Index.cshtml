@{
    ViewData["Title"] = "Отчёты и аналитика";
}

<div class="container mt-5 mb-5">

    <h1 class="text-center mb-5 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg,#900c3f,#6f42c1);-webkit-background-clip: text;-webkit-text-fill-color: transparent;">
        @ViewData["Title"]
    </h1>

    <!-- Секция: Запросы -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Запросы</h2>

    <section class="mb-5">
        @await Html.PartialAsync("NerezidentsByInspection")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("CategoriesByAddress")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("DeclarationsCountByInspection")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("TaxpayersByDayAndInspection")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("TaxableExpenses")
    </section>

    <!-- Секция: Сводные отчёты -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Сводные отчёты</h2>

    <section class="mb-5">
        @await Html.PartialAsync("MultipleIncomeCategory")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("DeclarationsSubmittedThisMonth")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("MaleTaxpayersOlderThan")
    </section>

    <!-- Секция: Хранимые процедуры -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Хранимые процедуры</h2>

    <section class="mb-5">
        @await Html.PartialAsync("TaxpayersBornInYear")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("TaxpayersByCategoryAndDate")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("InsertCountries")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("CountTaxpayersByDeclarationDay")
    </section>

</div>