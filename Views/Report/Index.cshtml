@{
    ViewData["Title"] = "Отчёты и аналитика";
}

<div class="container mt-5 mb-5">

    <h1 class="text-center mb-5 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg, #900c3f, #6f42c1); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        @ViewData["Title"]
    </h1>

    <!-- Секция: Запросы -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Запросы</h2>

    <section class="mb-5">
        <h3 class="text-center mb-3">Список налогоплательщиков-нерезидентов</h3>
        <div class="text-center">
            <a asp-controller="Report" asp-action="NerezidentsByInspection" class="btn btn-primary">
                Показать налогоплательщиков-нерезидентов
            </a>
        </div>
    </section>

    <section class="mb-5">
        <h3 class="text-center mb-3">Категории налогоплательщиков по адресу</h3>
        <div class="text-center">
            <a asp-controller="Report" asp-action="CategoriesByAddress" class="btn btn-primary">
                Показать категории по адресу
            </a>
        </div>
    </section>

    <section class="mb-5">
        <h3 class="text-center mb-3">Количество деклараций по инспекциям</h3>
        <div class="text-center">
            <a asp-controller="Report" asp-action="DeclarationsCountByInspection" class="btn btn-primary">
                Показать количество деклараций
            </a>
        </div>
    </section>

    <section class="mb-5">
        <h3 class="text-center mb-3">Налогоплательщики по дате и инспекции</h3>
        <div class="text-center">
            <a asp-controller="Report" asp-action="TaxpayersByDayAndInspection" class="btn btn-primary">
                Показать налогоплательщиков
            </a>
        </div>
    </section>

    <section class="mb-5">
        <h3 class="text-center mb-3">Сумма расходов подлежащих налогообложению</h3>
        <div class="text-center">
            <a asp-controller="Report" asp-action="TaxableExpenses" class="btn btn-primary">
                Показать сумму расходов
            </a>
        </div>
    </section>


    <!-- Секция: Сводные отчёты -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Сводные отчёты</h2>

    <section class="mb-5 text-center">
        <a asp-controller="Report" asp-action="MultipleIncomeCategory" class="btn btn-primary">
            Показать налогоплательщиков с несколькими местами дохода
        </a>
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("DeclarationsSubmittedThisMonth")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("MaleTaxpayersOlderThan")
    </section>

    <!-- Секция: Хранимые процедуры -->
    <h2 class="text-center text-uppercase mt-5 mb-4" style="letter-spacing: 2px;">Хранимые процедуры</h2>

    <section class="mb-5">
        @await Html.PartialAsync("TaxpayersBornInYear")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("TaxpayersByCategoryAndDate")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("InsertCountries")
    </section>

    <section class="mb-5">
        @await Html.PartialAsync("CountTaxpayersByDeclarationDay")
    </section>

</div>
