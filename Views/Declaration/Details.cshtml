@model TaxDeclarationWeb.Models.Declaration
@{
    ViewData["Title"] = "Детали декларации";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Год</dt>
            <dd class="col-sm-8">@Model.Year</dd>
            <dt class="col-sm-4">Налогоплательщик (ИИН)</dt>
            <dd class="col-sm-8">@Model.TaxpayerIIN</dd>
            <dt class="col-sm-4">Инспекция</dt>
            <dd class="col-sm-8">@Model.Inspection?.Name</dd>
            <dt class="col-sm-4">Инспектор</dt>
            <dd class="col-sm-8">@Model.Inspector?.FullName</dd>
            <dt class="col-sm-4">Сумма дохода</dt>
            <dd class="col-sm-8">@Model.Income</dd>
            <dt class="col-sm-4">Сумма расхода</dt>
            <dd class="col-sm-8">@Model.Expenses</dd>
            <dt class="col-sm-4">Необлагаемые расходы</dt>
            <dd class="col-sm-8">@Model.NonTaxableExpenses</dd>
            <dt class="col-sm-4">Уплачено налогов</dt>
            <dd class="col-sm-8">@Model.PaidTaxes</dd>
            <dt class="col-sm-4">Дата подачи</dt>
            <dd class="col-sm-8">@Model.SubmittedAt.ToShortDateString()</dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
        </div>
    </div>
</div>