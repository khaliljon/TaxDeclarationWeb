@model TaxDeclarationWeb.Models.Declaration
@{
    ViewData["Title"] = "Удаление декларации";
}

<h2>@ViewData["Title"]</h2>
<div class="alert alert-danger">
    <h4>Вы уверены, что хотите удалить эту декларацию?</h4>
    <dl class="row">
        <dt class="col-sm-4">Год</dt>
        <dd class="col-sm-8">@Model.Year</dd>
        <dt class="col-sm-4">Налогоплательщик</dt>
        <dd class="col-sm-8">@Model.TaxpayerIIN</dd>
        <dt class="col-sm-4">Сумма дохода</dt>
        <dd class="col-sm-8">@Model.Income</dd>
        <dt class="col-sm-4">Сумма расхода</dt>
        <dd class="col-sm-8">@Model.Expenses</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>