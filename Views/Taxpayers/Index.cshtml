@model IEnumerable<TaxDeclarationWeb.Models.Taxpayer>

@{
    ViewData["Title"] = "Список налогоплательщиков";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 display-4 fw-bold text-gradient"
        style="background: linear-gradient(90deg,#900c3f,#6f42c1);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
        @ViewData["Title"]
    </h1>

    <div class="text-end mb-4" style="margin-top: 20px; margin-bottom: 40px;">
        <a asp-action="Create" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px; border-radius: 5px;">
            <i class="bi bi-plus-circle"></i> Добавить налогоплательщика
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>ИИН</th>
                        <th>ФИО</th>
                        <th>Инспекция</th>
                        <th>Категория</th>
                        <th>Страна</th>
                        <th>Национальность</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IIN</td>
                            <td>@item.FullName</td>
                            <td>@item.Inspection?.Name</td>
                            <td>@item.Category?.Name</td>
                            <td>@item.Country?.Name</td>
                            <td>@item.Nationality?.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IIN" class="btn btn-sm btn-outline-light me-1" title="Редактировать" style="transform: scale(0.7); display: inline-block;">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IIN" class="btn btn-sm btn-outline-info me-1" title="Подробнее" style="transform: scale(0.7); display: inline-block;">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IIN" class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Удалить налогоплательщика @item.FullName?');" style="transform: scale(0.7); display: inline-block;">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Нет данных о налогоплательщиках.
        </div>
    }
</div>
