@model IEnumerable<TaxDeclarationWeb.Models.Taxpayer>
@{
    ViewData["Title"] = "Налогоплательщики";
}

<h2>Налогоплательщики</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>ИИН</th>
        <th>ФИО</th>
        <th>Инспекция</th>
        <th>Категория</th>
        <th>Страна</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.IIN</td>
            <td>@t.FullName</td>
            <td>@t.Inspection?.Name</td>
            <td>@t.Category?.Name</td>
            <td>@t.Country?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@t.IIN" class="btn btn-info btn-sm">Детали</a>
                <a asp-action="Edit" asp-route-id="@t.IIN" class="btn btn-warning btn-sm">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@t.IIN" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
