@model TaxDeclarationWeb.Models.Taxpayer

@{
    ViewData["Title"] = "Удаление налогоплательщика";
}

<div class="container mt-5 mb-5">
    <div class="card bg-dark text-white mx-auto" style="max-width: 700px;">
        <div class="card-header">
            <h4 class="mb-0">Удаление налогоплательщика</h4>
        </div>
        <div class="card-body">
            <p><strong>ИИН:</strong> @Model.IIN</p>
            <p><strong>ФИО:</strong> @Model.FullName</p>
            <p><strong>Инспекция:</strong> @Model.Inspection?.Name</p>
            <p><strong>Категория:</strong> @Model.Category?.Name</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="IIN" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger me-3">
                        <i class="bi bi-trash"></i> Удалить
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">← Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>